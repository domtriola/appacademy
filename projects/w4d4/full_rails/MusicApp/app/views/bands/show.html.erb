<h2><%= @band.name %></h2>

<h3>Albums</h3>

<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to album.title, album_url(album) %></li>
    <%= button_to 'delete', album_url(album), method: :delete %>
    <br>
  <% end %>
</ul>

